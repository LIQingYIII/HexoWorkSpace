
<div class="post">

        <div class="post-header">
            <h1 class="title">
                <a href="<%- url_for(item.path) %>">
                    <%- item.title || theme.default_post_title || __('default_post_title') %>
                </a>
            </h1>
            <div class="post-info">
                <% if(item.date) { %>
                    <span class="date"><%= item.date.format(config.date_format) %></span>
                <% } %>
                <% if (theme.comments && theme.comments.disqus_shortname) { %>
                    <%= __('comment') %>
                <% } %>
                <% if(item.categories && item.categories.first()) { %>
                    <span class="category">
                        <%- item.categories.first().name %>
                    </span>
                <% } %>
            </div>
        </div>
    
        <div class="content">
    
            <!-- Gallery -->
            <% if (item.photos && item.photos.length){ %>
                <%- partial('gallery') %>
            <% } %>
    
            <!-- Post Content -->
            <%- item.content %>
        </div>
    
        <%
            var tags = [];
            if(item.tags && item.tags.length) {
                item.tags.forEach(function(tag){
                    tags.push('#' + tag.name + '');
                });
            }
        %>
    
        <% if(tags.length) { %>
            <div class="post-tags">
                <i class="fa fa-tags" aria-hidden="true"></i>
                <%- tags.join(' ') %>
            </div>
        <% } %>
    
        <!-- Comments -->
        <% if (theme.comments && theme.comments.disqus_shortname) { %>
        <div class="comments">
            <%- partial("_partial/comments.ejs") %>
        </div>
        <% } %>
    
    </div>